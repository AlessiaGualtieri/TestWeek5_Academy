@model UserViewModel
@{
    ViewData["Title"] = "Login";
}

<style>
    .errorMessage {
        color: red;
        margin-bottom: 16px;
    }
</style>
<div class="errorMessage">

    @ViewData["LoginError"]
</div>
<form method="post">
    <input type="hidden" asp-for="ReturnURL" />

    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control">
        <span class="errorMessage" asp-validation-for="Username"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control">
        <span class="errorMessage" asp-validation-for="Password"></span>
    </div>

    <input asp-action="Login" type="submit" value="Login" class="btn btn-primary" />
    <input asp-action="Register" type="submit" value="Register" class="btn btn-primary" />


</form>